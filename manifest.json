{
	"manifest_version": 3,
	"name": "__MSG_appName__",
	"short_name": "__MSG_shortAppName__",
	"version": "5.0.0",
	"version_name": "5.0.0",
	"description": "__MSG_appDesc__",
	"default_locale": "en",
	"icons": {
		"16": "images/logo16.png",
		"32": "images/logo32.png",
		"48": "images/logo48.png",
		"64": "images/logo64.png",
		"96": "images/logo96.png",
		"128": "images/logo128.png",
		"256": "images/logo256.png",
		"512": "images/logo512.png"
	},
	"incognito": "not_allowed",
	"options_page": "options.html",
	"action": {
		"default_popup": "src/popup/popup.html"
	},
	"permissions": [
		"storage", "scripting"
	],
	"host_permissions": [
		"https://iintra.freekb.es/*",
		"https://*.intra.42.fr/*"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"options/options.html"
			],
			"matches": [ "*://*.intra.42.fr/*", "*://iintra.freekb.es/*", "*://darkintra.freekb.es/*" ]
		}
	],
	"content_scripts": [
		{
			"matches": [ "*://*.intra.42.fr/*" ],
			"css": [ "src/shared/styling/fonts.css" ],
			"js": [ "src/utils/utils.js", "src/utils/console.js" ],
			"run_at": "document_start"
		},
		{
			"matches": [ "*://iintra.freekb.es/*" ],
			"js": [ "src/utils/utils.js", "src/utils/console.js" ],
			"run_at": "document_start"
		},
		{
			"matches": [ "*://profile.intra.42.fr/*" ],
			"exclude_matches": [ "*://profile.intra.42.fr/users/*" ],
			"css": [ "src/v3/dashboard/styles.css" ],
			"js": [ "src/v3/dashboard/scripts.js" ],
			"run_at": "document_end"
		},
		{
			"matches": [ "*://*.intra.42.fr/*" ],
			"css": [ "src/shared/common.css" ],
			"js": [ "src/shared/common.js", "src/loader.js" ],
			"run_at": "document_end"
		}
	],
	"background": {
		"service_worker": "sw.js"
	},
	"omnibox": {
		"keyword": "intra"
	}
}
